<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-gray-900">Welcome back</h1>
      <p class="mt-2 text-gray-600">Sign in to continue organizing your work</p>
    </div>

    <% if alert = flash[:alert] %>
      <div class="rounded-md bg-red-50 p-4">
        <p class="text-red-500 font-medium" id="alert"><%= alert %></p>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="rounded-md bg-green-50 p-4">
        <p class="text-green-500 font-medium" id="notice"><%= notice %></p>
      </div>
    <% end %>

    <%= form_with url: session_url, class: "mt-8 space-y-6" do |form| %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= form.email_field :email_address, 
              required: true, 
              autofocus: true, 
              autocomplete: "username", 
              placeholder: "Email address", 
              value: params[:email_address], 
              class: "appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>

        <div>
          <%= form.password_field :password, 
              required: true, 
              autocomplete: "current-password", 
              placeholder: "Password", 
              maxlength: 72, 
              class: "appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm">
          <%= link_to "Forgot password?", new_password_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", 
            class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 transform hover:scale-105" %>
      </div>
    <% end %>

    <div class="text-center">
      <p class="text-sm text-gray-600">
        Don't have an account? 
        <%= link_to "Sign up", register_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>
  </div>
</div>
