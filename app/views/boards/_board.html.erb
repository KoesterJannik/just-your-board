<div id="<%= dom_id board %>" class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-8">
  <div class="max-w-[1800px] mx-auto px-4 sm:px-6 lg:px-8">
    <%# Board Header %>
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @board.title %></h1>
          <p class="mt-1 text-sm text-gray-500"><%= @board.description %></p>
        </div>
        
        <div class="flex flex-wrap items-center gap-3">
          <%= link_to new_board_column_path(@board), 
              class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
            <i class="fas fa-plus mr-2"></i> New Column
          <% end %>
          
          <div class="flex items-center gap-2">
            <%= link_to edit_board_path(@board), 
                class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
              <i class="fas fa-edit mr-1"></i> Edit Board
            <% end %>
            
            <%= button_to @board, method: :delete, 
                class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors",
                data: { turbo_confirm: "Are you sure? This action cannot be undone." } do %>
              <i class="fas fa-trash mr-1"></i> Delete Board
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%# Kanban Board %>
    <div class="flex gap-6 overflow-x-auto pb-8 min-h-[calc(100vh-12rem)]">
      <% board.columns.each do |column| %>
        <div class="flex-shrink-0 w-80 bg-gray-50 rounded-lg shadow-sm border border-gray-200">
          <%# Column Header %>
          <div class="p-4 bg-white rounded-t-lg border-b border-gray-200">
            <div class="flex items-center justify-between group">
              <h2 class="text-sm font-semibold text-gray-900"><%= column.name %></h2>
              <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                <%= link_to new_board_column_card_path(board, column), 
                    class: "text-gray-400 hover:text-green-600 transition-colors",
                    title: "Add card" do %>
                  <i class="fas fa-plus"></i>
                <% end %>
                <%= link_to edit_board_column_path(board, column), 
                    class: "text-gray-400 hover:text-blue-600 transition-colors",
                    title: "Edit column" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= button_to board_column_path(board, column), 
                    method: :delete,
                    class: "text-gray-400 hover:text-red-600 transition-colors",
                    title: "Delete column" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>

          <%# Cards Container %>
          <div class="p-4 space-y-3">
            <% column.cards.each do |card| %>
              <div class="group relative bg-white rounded-lg shadow-sm border-l-4 hover:shadow-md transition-shadow duration-200 <%= priority_border_color_class(card.priority) if card.priority.present? %>"
                   data-controller="dropdown">
                <%# Card Content %>
                <div class="p-4">
                  <div class="flex items-start justify-between">
                    <h3 class="text-sm font-medium text-gray-900"><%= card.name %></h3>
                    <%# Dropdown Menu %>
                    <div class="relative ml-2">
                      <button type="button" 
                              class="opacity-0 group-hover:opacity-100 text-gray-400 hover:text-gray-600 transition-all"
                              data-action="click->dropdown#toggle">
                        <i class="fas fa-ellipsis-h"></i>
                      </button>

                      <div data-dropdown-target="menu"
                           class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-10">
                        <div class="py-1">
                          <%= link_to edit_board_column_card_path(board, column, card),
                              class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors" do %>
                            <i class="fas fa-edit mr-2"></i> Edit
                          <% end %>
                          
                          <%= button_to board_column_card_path(board, column, card),
                              method: :delete,
                              class: "flex items-center w-full px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors",
                              data: { turbo_confirm: "Are you sure you want to delete this card?" } do %>
                            <i class="fas fa-trash mr-2"></i> Delete
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <% if card.priority.present? %>
                    <span class="inline-flex items-center mt-2 px-2 py-0.5 rounded text-xs font-medium <%= priority_color_class(card.priority) %>">
                      <%= card.priority.humanize %>
                    </span>
                  <% end %>

                  <% if card.description.present? %>
                    <p class="mt-2 text-sm text-gray-600"><%= card.description %></p>
                  <% end %>

                  <div class="mt-3 flex items-center text-xs text-gray-400">
                    <i class="fas fa-clock mr-1"></i>
                    <%= card.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

  
    </div>
  </div>
</div>
