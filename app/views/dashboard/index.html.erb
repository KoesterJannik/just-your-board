<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Dashboard</h1>
  
  <div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Welcome, <%= Current.user.email_address %></h2>
    <p class="text-gray-600">This is your personalized dashboard.</p>
    
    <!-- Add your dashboard content here -->
    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
        <h3 class="font-medium text-blue-800">Quick Stats</h3>
        <p class="mt-2 text-sm text-gray-600">Your dashboard statistics will appear here.</p>
      </div>
      
      <div class="bg-green-50 p-4 rounded-lg border border-green-100">
        <h3 class="font-medium text-green-800">Recent Activity</h3>
        <p class="mt-2 text-sm text-gray-600">Your recent activities will appear here.</p>
      </div>
      
      <div class="bg-purple-50 p-4 rounded-lg border border-purple-100">
        <h3 class="font-medium text-purple-800">Notifications</h3>
        <p class="mt-2 text-sm text-gray-600">Your notifications will appear here.</p>
      </div>
    </div>
  </div>
</div> 