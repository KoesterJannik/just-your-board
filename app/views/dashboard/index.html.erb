<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Dashboard</h1>
  
  <div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Welcome, <%= Current.user.email_address %></h2>
    <p class="text-gray-600">This is your personalized dashboard.</p>
    
    <!-- Add your dashboard content here -->
    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @boards.each do |board| %>
        <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
          <h3 class="font-medium text-blue-800"><%= board.title %></h3>
          <p class="mt-2 text-sm text-gray-600"><%= board.description %></p>
          <%= link_to "View Board", board_path(board), class: "mt-2 text-sm text-blue-500 hover:text-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 

<div data-controller="modal">
  <!-- Button to trigger modal -->
  <button data-action="click->modal#open" class="bg-blue-500 text-white px-4 py-2 rounded">
    Open Modal
  </button>

  <!-- Modal backdrop and container -->
  <div data-modal-target="modal" 
       data-action="click->modal#closeBackground"
       class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center">
    
    <!-- Modal content -->
    <div class="bg-white rounded-lg p-6 max-w-lg w-full mx-4">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold">Modal Title</h3>
        <button data-action="click->modal#close" class="text-gray-500 hover:text-gray-700">
          <span class="text-2xl">&times;</span>
        </button>
      </div>
      
      <!-- Your modal content goes here -->
      <div class="modal-content">
        <p>This is your modal content!</p>
      </div>
      
      <div class="mt-4 flex justify-end">
        <button data-action="click->modal#close" 
                class="bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400">
          Close
        </button>
      </div>
    </div>
  </div>
</div>