<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-gray-900">Invite a member</h1>
      <p class="mt-2 text-gray-600">Invite someone to collaborate on your board</p>
    </div>

    <%= form_with model: @invitation, url: board_invitation_create_path, class: "mt-8 space-y-6" do |form| %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email,
              placeholder: "Enter email address",
              required: true,
              class: "appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.submit "Send Invitation",
            class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 transform hover:scale-105" %>
      </div>
    <% end %>
  </div>
</div>