<nav class="bg-white shadow-sm">
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <span class="text-xl font-bold text-gray-900">NSBS Planning</span>
        <% end %>
      </div>

      <div class="flex items-center space-x-4">
        <% if authenticated? %>
          <%= link_to "Dashboard", dashboard_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
          
          <div class="flex items-center space-x-4">
            <div class="flex items-center">
              <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=<%= Current.user.email_address %>" 
                   alt="Avatar" 
                   class="h-8 w-8 rounded-full bg-gray-100" />
            </div>
            
            <%= button_to "Log out", 
                session_path, 
                method: :delete, 
                class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
          </div>
        <% else %>
          <div class="flex items-center space-x-4">
            <%= link_to "Home", root_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
            <%= link_to "Login", new_session_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors" %>
            <%= link_to "Register", register_path, class: "bg-indigo-600 text-white hover:bg-indigo-700 px-4 py-2 rounded-md text-sm font-medium transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav> 